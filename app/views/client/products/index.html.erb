<a href= "/client/products/new">Make a New Product</a>

<%= form_tag "/client/products", method: :get do %>
 <input type="text" name="client_search" placeholder="Search for a product here">
 <input type="text" name="client_sort" placeholder="Sort by?">
 <input type="submit" value="Search for Product">
 <% end %>
 
<% @products.each do |product|%>
  <h3>Name: <a href= "/client/products/<%=product['id']%>"><%= product['name'] %></a></h3>
  <h3>Price: <%= product['price'] %> <% if product["formatted"]["is_discounted?"] %>
    <h4 style="color: red;">Discounted Item!</h4>
    <% else %>
    <h4 style="color: green;">Everyday Value!</h4>
  <% end %>
  <h3>Description: <%= product['description'] %></h3>
  <img src= "<%= product['images'][0]['image_url'] %>">
  <hr>
  <hr>
<% end %>

<!-- the href link in name will take the user to that specific product via id -->