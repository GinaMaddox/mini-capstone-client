

<div class="row">
<% @products.each do |product|%>
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><a href= "/client/products/<%=product['id']%>"><%= product['name'] %></a></h5>
        <p class="card-text"><%= product['description'] %></p>
        <a href="#" class="btn btn-primary">Go somewhere</a>
      </div>
    </div>
  </div>
  
  <h3>Price: <%= product['price'] %> <% if product["formatted"]["is_discounted?"] %>
    <h4 style="color: red;">Discounted Item!</h4>
    <% else %>
    <h4 style="color: green;">Everyday Value!</h4>
  <% end %>
  
  <% product['images'].each do |image| %>
  <img src= "<%= image['image_url'] %>">
  <% end %>
  <hr>
  <hr>
 <% end %>
</div>